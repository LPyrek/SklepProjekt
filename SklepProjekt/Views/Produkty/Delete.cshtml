@model SklepProjekt.Models.Produkt

<h2>Usuń produkt</h2>

<div class="alert alert-danger">
    Czy na pewno chcesz usunąć ten produkt?
</div>

<table class="table">
    <tr>
        <th>Id Produktu</th>
        <td>@Model.ID_produktu</td>
    </tr>
    <tr>
        <th>Nazwa produktu</th>
        <td>@Model.Nazwa_produktu</td>
    </tr>
    <tr>
        <th>Opis</th>
        <td>@Model.Opis</td>
    </tr>
    <tr>
        <th>Cena</th>
        <td>@Model.Cena</td>
    </tr>
    <tr>
        <th>Dostępna ilość</th>
        <td>@Model.Dostępna_ilość</td>
    </tr>
</table>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions">
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        @Html.ActionLink("Anuluj", "Index", null, new { @class = "btn btn-primary" })
    </div>
}
