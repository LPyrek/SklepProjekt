@model SklepProjekt.Models.Klient

<h2>Nowy klient</h2>

@using (Html.BeginForm("Create", "Klienci", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.Imie)
        @Html.TextBoxFor(model => model.Imie, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Imie)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Nazwisko)
        @Html.TextBoxFor(model => model.Nazwisko, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Nazwisko)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Email)
        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Email)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Numer_telefonu)
        @Html.TextBoxFor(model => model.Numer_telefonu, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Numer_telefonu)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Adres)
        @Html.TextBoxFor(model => model.Adres, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Adres)
    </div>

    <div class="form-group">
        <input type="submit" value="Zapisz" class="btn btn-primary" />
        @Html.ActionLink("Anuluj", "Index", null, new { @class = "btn btn-secondary" })
    </div>
}


