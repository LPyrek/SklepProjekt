@model IEnumerable<SklepProjekt.Models.Klient>

<h2>Lista klientów</h2>

<p>
    @Html.ActionLink("Nowy klient", "Create")
</p>

<table class="table">
    <tr>
        <th>ID klienta</th>
        <th>Imie</th>
        <th>Nazwisko</th>
        <th>Email</th>
        <th>Numer Telefonu</th>
        <th></th>
    </tr>
    @foreach (var klient in Model)
    {
        <tr>
            <td>@klient.ID_klienta</td>
            <td>@klient.Imie</td>
            <td>@klient.Nazwisko</td>
            <td>@klient.Email</td>
            <td>@klient.Numer_telefonu</td>
            <td>
                <a href="@Url.Action("Edit", new { id = klient.ID_klienta })">Edytuj</a> |
                <a href="@Url.Action("Details", new { id = klient.ID_klienta })">Szczegóły</a> |
                <a href="@Url.Action("Delete", new { id = klient.ID_klienta })">Usuń</a>
            </td>
        </tr>
    }
</table>
